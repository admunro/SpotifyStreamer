<RelativeLayout
    android:id="@+id/artist_result_relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.spotifystreamer.ArtistSearchFragment">


    <ImageView
        android:id="@+id/fragment_artist_result_image"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:background="@color/primary_dark_material_dark" />

    <TextView
        android:id="@+id/fragment_artist_result_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fragment_artist_result_image"
        android:paddingLeft="@dimen/artist_search_horizontal_margin"
        android:paddingRight="@dimen/artist_search_horizontal_margin"
        android:text="@string/album_name"/>

</RelativeLayout>
