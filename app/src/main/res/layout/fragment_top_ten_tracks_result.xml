<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.spotifystreamer.TopTenTracksFragment">


    <ImageView
        android:id="@+id/fragment_top_ten_tracks_image"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:background="@color/abc_search_url_text_normal" />

    <TextView
        android:id="@+id/fragment_top_ten_tracks_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fragment_top_ten_tracks_image"
        android:paddingLeft="@dimen/top_ten_tracks_horizontal_margin"
        android:paddingRight="@dimen/top_ten_tracks_horizontal_margin"
        android:text="@string/album_name"/>

    <TextView
        android:id="@+id/fragment_top_ten_tracks_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_top_ten_tracks_song"
        android:layout_toRightOf="@id/fragment_top_ten_tracks_image"
        android:paddingLeft="@dimen/top_ten_tracks_horizontal_margin"
        android:paddingRight="@dimen/top_ten_tracks_horizontal_margin"
        android:text="@string/song_name"/>

</RelativeLayout>
